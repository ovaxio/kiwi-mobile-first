!!! 5
html
  head
    - var STATIC="../"
    meta(name="viewport", content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
    link(rel="stylesheet", href=STATIC+"kiwi.min.css", type="text/css")
    :stylus
      *
        margin 0
        padding 0
        font-size 20px
      .grey
        box-sizing border-box
        -moz-box-sizing border-box
        -ms-box-sizing border-box
        padding 5px 10px
        background-color grey
        color white
        margin 0 5px
        margin-bottom 5px
        display block
  body
    h1 Grids css component
    br
    h2 [TEST] Elements display
    .kiwi-visible-xl XLARGE VIEW
    .kiwi-visible-l LARGE VIEW 
    .kiwi-visible-m MEDIUM VIEW
    .kiwi-visible-s SMALL VIEW
    br
    br
    h2 [TEST] Reponsive grid 
    .kiwi-grid
      for i in [1,2,3,4]
        .kiwi-col.l-1-4.m-1-2.s-1
          code.grey .kiwi-col.l-1-4.m-1-2.s-1
      
      
    br
    br
    h2 [TEST] Nested grid
    .kiwi-grid
      .kiwi-col.l-2-5
        .grey .kiwi-col.l-2-5
      .kiwi-col.l-3-5
        .kiwi-grid
          .kiwi-col.l-1-2.centered
            .grey .kiwi-col.l-1-2.centered
      

    br
    br
    h2 [TEST] Centered
    .kiwi-grid
      .kiwi-col.l-3-5.centered
        .grey .kiwi-col.l-3-5.centered