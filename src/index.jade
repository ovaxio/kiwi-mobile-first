!!! 5
html
  head
    - var STATIC="../"
    meta(name="viewport", content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1")
    link(rel="stylesheet", href=STATIC+"kiwi.css", type="text/css")
    :stylus
      *
        margin 0
        padding 0
        font-size 20px
      body
        font: normal 13px/1.5em Arial, sans-serif;
      h2
        margin-top 30px
        line-height 1.4em
      .grey
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        -ms-box-sizing: border-box;
        background-color: #808080;
        color: #fff;
        padding 10px
        margin-bottom 10px
        display: block;
        font: normal 13px/1.1em Consolas, 'Courier New', courier;
        
  body
    h1 Grids css component
    br
    h2 Elements display
    .kiwi-visible-xl XLARGE VIEW
    .kiwi-visible-l LARGE VIEW 
    .kiwi-visible-m MEDIUM VIEW
    .kiwi-visible-s SMALL VIEW
    
    h2 Reponsive grid 
    .kiwi-grid
      for i in [1,2,3,4]
        .kiwi-col.l-1-4.m-1-2.s-1
          .grey .l-1-4.m-1-2.s-1
    .kiwi-grid
      .kiwi-col.l-1-2
        .grey .l-1-2
      .kiwi-col.l-1-2
        .grey .l-1-2
      
    h2 Nested grid
    .kiwi-grid
      .kiwi-col.l-2-5
        .grey .kiwi-col.l-2-5
      .kiwi-col.l-3-5
        .kiwi-grid
          .kiwi-col.l-1-2.centered
            .grey .l-1-2.centered
   
    h2 Centered
    .kiwi-grid
      .kiwi-col.l-3-5.centered
        .grey .l-3-5.centered
